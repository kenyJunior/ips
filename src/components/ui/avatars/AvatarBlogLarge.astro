// Import necessary components
// import { Image } from "astro:assets";

import type { CollectionEntry } from "astro:content";

const { blogEntry } = Astro.props;

interface Props {
  blogEntry: CollectionEntry<"blog">;
  authorImage?: ImageMetadata;
  authorImageAlt?: string;
}
---

<div class="shrink-0">
  {blogEntry?.data ? (
    <img
      class="size-10 rounded-full sm:h-14 sm:w-14"
      src={
        typeof blogEntry.data.authorImage === "string"
          ? blogEntry.data.authorImage
          : blogEntry.data.authorImage?.src ?? "/images/default-author.jpg"
      }
      alt={blogEntry.data.authorImageAlt ?? "Image de l'auteur"}
      draggable={false}
    />
  ) : (
    <img
      class="size-10 rounded-full sm:h-14 sm:w-14"
      src="/images/default-author.jpg"
      alt="Image par dÃ©faut"
      draggable={false}
    />
  )}
</div>